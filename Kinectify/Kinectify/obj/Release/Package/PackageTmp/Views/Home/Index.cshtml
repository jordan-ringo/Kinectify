@using Kinectify.Models;

@{
	
	ViewBag.Title = "Home Page";
	Layout = "~/Views/Shared/Empty_Layout.cshtml";

	UserProgram[] myPrograms = new UserProgram[6] ;
	Array.Copy(ViewBag.UserPrograms, 0, myPrograms, 0, ViewBag.UserPrograms.Length);

	VoiceCommand[] myVoiceCommands = new VoiceCommand[6];
	Array.Copy(ViewBag.VoiceCommands, 0, myVoiceCommands, 0, ViewBag.VoiceCommands.Length);



	// Get the User Profile Image
	string userImage;

	if (ViewBag.UserProfile != null)
	{
		if ((ViewBag.UserProfile.ImageURL == null) || (ViewBag.UserProfile.ImageURL.Trim() == ""))
		{
			userImage = "~/images/default_user_icon_520_520.png";
		}
		else
		{
			userImage = ViewBag.UserProfile.ImageURL.Trim();
		}
	}
	else
	{
		userImage = "~/images/new_user_520_520.png";
	}
	
}

<script language="javascript">

	$(document).mousemove(function () {
		$('#myLayers').fadeIn();
